@using Pandacap.Clients
@model UploadViewModel

@{
    ViewBag.Title = "Upload";
}

<form asp-action="Upload" enctype="multipart/form-data">
    <input asp-for="@Model.Destination" type="hidden" />
    <div class="mb-3">
        <label asp-for="@Model.File" class="form-label"></label>
        <input asp-for="@Model.File" class="form-control" accept="image/png,image/jpeg" />
    </div>
    <div class="mb-3">
        <label asp-for="@Model.AltText" class="form-label"></label>
        <input asp-for="@Model.AltText" class="form-control" />
    </div>
    <div class="mb-3 form-check px-0">
        <input asp-for="@Model.GenerateAltText">
        <label asp-for="@Model.GenerateAltText" class="form-check-label"></label>
    </div>
    <button type="submit" class="btn btn-primary">Upload</button>
</form>
