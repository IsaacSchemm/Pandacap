@using Pandacap.Data
@using Pandacap.Clients
@using Pandacap.HighLevel
@using Pandacap.Models
@model IEnumerable<CommunityBookmark>

@{
    ViewBag.Title = "Communities";
}

<h1>Bookmarked Lemmy communities</h1>

@if (!Model.Any())
{
    <p>
        This user has no bookmarked Lemmy communities.
    </p>
}
else
{
    foreach (var item in Model)
    {
        <div class="my-4">
            <div>
                <img height="50" src="@(item.IconUrl ?? "/images/trgray.svg")" alt="" />
                <span class="mx-2" style="display: inline-block; vertical-align: top">
                    <a asp-action="ViewCommunity" asp-route-actorId="@item.ActorId">
                        <strong>
                            @item.Name
                        </strong>
                    </a>
                    <br />
                    @item.Host

                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <form asp-action="RemoveBookmark" onsubmit="return confirm('Are you sure you want to remove this bookmark?')">
                            <input type="hidden" name="id" value="@item.ActorId" />
                            <button type="submit" class="btn btn-danger btn-sm mt-2 py-0">
                                Remove bookmark
                            </button>
                        </form>
                    }
                </span>
            </div>
        </div>
    }
}

@if (User.Identity?.IsAuthenticated == true)
{
    <h1>Add bookmark</h1>

    <form asp-action="AddBookmark">
        <div class="mb-3">
            <label for="id" class="form-label">
                Actor ID (URL)
            </label>
            <input type="url" class="form-control" id="id" name="id" placeholder="https://" />
            <div class="form-text">Mastodon-style handles (of the form <tt>@@user@@hostname</tt>) are not supported.</div>
        </div>
        <button type="submit" class="btn btn-primary">
            Add bookmark
        </button>
    </form>
}
