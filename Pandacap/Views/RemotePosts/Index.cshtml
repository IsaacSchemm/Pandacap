@using Pandacap.ActivityPub.Inbound
@model RemotePostViewModel

@{
    var post = Model.RemotePost;
    ViewBag.Title = "View Remote Post";
}

<p>
    <img width="50" height="50" src="@(post.AttributedTo.IconUrl ?? "/images/trgray.svg")" alt="">
    <span style="display: inline-block; vertical-align: top">
        <a href="@post.AttributedTo.Url" target="_blank">
            <strong>@post.AttributedTo.PreferredUsername</strong>
        </a>

        <br>

        <span class="small text-muted" style="user-select: all">@post.AttributedTo.Id</span>
    </span>
</p>

<dl>
    @foreach (var to in post.To)
    {
        <dt>To</dt>
        <dd><partial name="_Addressee" model="@to" /></dd>
    }
    @foreach (var cc in post.Cc)
    {
        <dt>CC</dt>
        <dd><partial name="_Addressee" model="@cc" /></dd>
    }
</dl>

<hr />

<h1>@post.Name</h1>

<p>
    <a href="@(post.Url ?? post.Id)">
        @post.PostedAt.UtcDateTime.ToLongDateString()
        @post.PostedAt.UtcDateTime.ToShortTimeString()</a>

    <span class="badge" style="background-color: navy; color: white">
        @post.Type?.Replace("https://www.w3.org/ns/activitystreams#", "")
    </span>

    @if (post.InReplyTo.Any())
    {
        <br />

        <span class="small">
            in reply to:
            @foreach (string id in post.InReplyTo)
            {
                <a asp-controller="RemotePosts" asp-action="Index" asp-route-id="@id" target="_blank">
                    @id
                </a>
            }
        </span>
    }
</p>

@if (post.HasVisibleSummary || post.Sensitive)
{
    <details>
        <summary>
            @(post.HasVisibleSummary ? post.Summary : "Show content")
        </summary>

        <partial name="_Content" model="@post" />
    </details>
}
else
{
    <partial name="_Content" model="@post" />
}

<hr />

<p>
    @if (!Model.IsInFavorites)
    {
        <form asp-controller="Favorites" asp-action="Add" class="d-inline">
            <input type="hidden" name="id" value="@post.Id" />
            <button class="btn btn-primary btn-sm">Add to Favorites</button>
        </form>
    }
    else
    {
        <form asp-controller="Favorites" asp-action="Remove" class="d-inline">
            <input type="hidden" name="id" value="@post.Id" />
            <button class="btn btn-danger btn-sm">Remove from Favorites</button>
        </form>
    }
</p>

<hr />

<p>
    <form method="post" asp-action="Reply">
        <input type="hidden" name="id" value="@post.Id" />

        <div class="form-group">
            <label for="replyContent" class="form-label">Write reply (plain text)</label>
            <textarea name="content" id="replyContent" class="form-control" rows="3"></textarea>
        </div>

        <div class="form-group mt-3 text-end">
            <button class="btn btn-outline-primary">Send</button>
        </div>
    </form>
</p>
