@model IEnumerable<BlueskyFollowModel>

<p>
    This page lists users you currently follow, as well as users who you've set custom options for (whether you still follow them or not).
</p>

@foreach (var item in Model)
{
    <div class="mb-3">
        <div>
            <img height="50" src="@(item.Avatar ?? "/images/trgray.svg")" alt="" />
            <span style="display: inline-block; vertical-align: top">
                <strong>
                    @item.Handle
                </strong>
                <br />
                <a href="https://bsky.app/profile/@item.DID" target="_blank">@item.DID</a>
            </span>
        </div>

        @if (User.Identity?.IsAuthenticated == true)
        {
            <a asp-action="UpdateFollow" asp-route-did="@item.DID" class="small">
                Options
            </a>
        }
    </div>
}