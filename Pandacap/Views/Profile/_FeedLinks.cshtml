@model string

<p>
    <img src="~/images/feed-icon.svg" width="16" height="16" alt="" />
    <a href="@Model?format=atom" target="_blank">Atom</a>

    &middot;

    <img src="~/images/feed-icon.svg" width="16" height="16" alt="" />
    <a href="@Model?format=rss" target="_blank">RSS</a>

    @if (Model.StartsWith("/Gallery/"))
    {
        @:&middot;

        <img src="~/images/twtxt-logo.svg" width="16" height="16" alt="" />
        <a href="@Model?format=twtxt" target="_blank">Twtxt</a>
    }
</p>
