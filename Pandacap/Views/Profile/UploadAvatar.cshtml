@using Pandacap.Clients

<form asp-action="UploadAvatar" enctype="multipart/form-data">
    <div class="mb-3">
        <label for="file" class="form-label"></label>
        <input name="file" id="file" type="file" class="form-control" accept="image/png,image/jpeg" />
    </div>
    <button type="submit" class="btn btn-primary">Replace avatar</button>
</form>
