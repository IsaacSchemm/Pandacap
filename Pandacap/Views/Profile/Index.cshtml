@using Pandacap.Data
@using Pandacap.HighLevel
@model ProfileViewModel

@{
    ViewData["Title"] = "Profile";
}

<img
    src="@Model.MostRecentPost?.Usericon"
    alt="Avatar"
    float="left"
    style="vertical-align: top" />

<div style="display: inline-block">
    <h1>
        @Model.MostRecentPost?.Username
    </h1>

    <p>
        Followers:
        <a asp-action="Followers">
            @Model.FollowerCount
        </a>
        <br />
        Following:
        <a asp-action="Following">
            @Model.FollowingCount
        </a>
    </p>
</div>

@if (Model.RecentArtwork.Any()) {
    <h2>
        Newest artwork
    </h2>

    <form asp-action="Search" method="get">
        <div class="mb-3">
            <label for="q" class="form-label">
                Title / GUID / URL
            </label>
            <input type="text" class="form-control" id="q" name="q" />
        </div>
        <button type="submit" class="btn btn-primary">
            Search
        </button>
    </form>

    <div class="container-fluid">
        <div class="row">
            @foreach (var post in Model.RecentArtwork)
            {
                <div class="col-sm-4 col-md-3 text-center my-4">
                    <a href="/Post/@post.Id">
                        <img src="@post.GetThumbnailSrc()"
                             srcset="@post.GetThumbnailSrcset()"
                             alt="@post.AltText"
                             referrerpolicy="no-referrer"
                             class="feed-image" />
                        @post.Title
                    </a>
                </div>
            }
        </div>
    </div>

    <a asp-controller="Gallery" asp-action="Artwork">
        View more &raquo;
    </a>
}

@if (Model.RecentTextPosts.Any()) {
    <h2>
        Recent posts
    </h2>

    @foreach (IPost post in Model.RecentTextPosts)
    {
        <div>
            <a href="/Post/@post.Id">@post.DisplayTitle</a>
            <span class="text-muted">(@post.Timestamp.UtcDateTime.ToLongDateString())</span>
        </div>
    }

    <a asp-controller="Gallery" asp-action="TextPosts">
        View more &raquo;
    </a>
}

@if (User.Identity?.IsAuthenticated == true)
{
    <div class="card mt-3" style="max-width: 800px">
        <div class="card-header">
            Follow new user
        </div>
        <div class="card-body">
            <form asp-action="Follow">
                <div class="mb-3">
                    <label for="alt" class="form-label">
                        ActivityPub ID / URL
                    </label>
                    <input type="text" class="form-control" id="id" name="id" />
                    <div class="form-text">Mastodon-style handles (of the form <tt>@@user@@hostname</tt>) are not supported.</div>
                </div>
                <button type="submit" class="btn btn-primary">
                    Send follow request
                </button>
            </form>
        </div>
    </div>
}

<style type="text/css">
    img.feed-image {
        height: 150px;
    }

    @@supports (object-fit: contain) {
        img.feed-image {
            width: 100%;
            object-fit: contain;
        }
    }
</style>
