@using Pandacap.LowLevel
@model CreateArtworkViewModel
@inject ApplicationInformation appInfo

<style type="text/css">
</style>

<form asp-action="CreateArtwork" enctype="multipart/form-data">
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="mb-3">
                    <label asp-for="@Model.Title" class="form-label"></label>
                    <input asp-for="@Model.Title" class="form-control" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col col-lg-6">
                <div class="mb-3">
                    <label asp-for="@Model.File" class="form-label"></label>
                    <input asp-for="@Model.File" class="form-control" accept="image/png,image/jpeg" />
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.AltText" class="form-label"></label>
                    <input asp-for="@Model.AltText" class="form-control" />
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.MarkdownBody" class="form-label"></label>
                    <textarea asp-for="@Model.MarkdownBody" class="form-control" rows="5"></textarea>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Tags" class="form-label"></label>
                    <input asp-for="@Model.Tags" class="form-control" />
                </div>
            </div>
            <div class="col col-lg-6">
                <div class="mb-3 form-check px-0">
                    <input asp-for="@Model.Sensitive">
                    <label class="form-check-label" asp-for="@Model.Sensitive"></label>
                </div>
                <div class="mb-3 form-check px-0">
                    <input asp-for="@Model.UseSummary">
                    <label class="form-check-label" asp-for="@Model.UseSummary"></label>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Summary" class="form-label"></label>
                    <input asp-for="@Model.Summary" class="form-control" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col text-right">
                <button type="submit" class="btn btn-primary">Upload to @appInfo.ApplicationName</button>
            </div>
        </div>
    </div>
</form>
