@using Pandacap.ConfigurationObjects
@using Pandacap.Data
@model UserPostViewModel
@inject ApplicationInformation appInfo

@{
    ViewBag.Title = Model.Post.Type == PostType.StatusUpdate
        ? "Status Update"
        : Model.Post.Title;
    ViewBag.UserPost = Model.Post;
}

@if (Model.Post.IsTextPost && DateTimeOffset.UtcNow.AddYears(-1) > Model.Post.PublishedTime)
{
    <div class="card text-bg-warning mb-3" style="max-width: 18rem;">
        <div class="card-body">
            <p class="card-text">This post is more than one year old.</p>
        </div>
    </div>
}

<p>
    <img width="50" height="50" src="/Blobs/Avatar" alt="" />
    <span style="display: inline-block; vertical-align: top">
        <strong>@appInfo.Username</strong>
        <br />
        <span class="small text-muted" style="user-select: all">@appInfo.ApplicationHostname</span>
    </span>
</p>

<h1>@Model.Post.Title</h1>

<p>
    @Model.Post.PublishedTime.UtcDateTime.ToLongDateString()
    @Model.Post.PublishedTime.UtcDateTime.ToShortTimeString()
</p>

<div class="social-block">
    View on:
</div>

@if (Model.Post.BlueskyDID != null)
{
    <div class="social-block">
        <a href="https://bsky.app/profile/@Model.Post.BlueskyDID/post/@Model.Post.BlueskyRecordKey" target="_blank">
            <img alt=""
                 src="https://web-cdn.bsky.app/static/favicon-16x16.png"
                 class="social-icon-inline" />

            Bluesky
        </a>

        <br />

        <a href="https://blacksky.community/profile/@Model.Post.BlueskyDID/post/@Model.Post.BlueskyRecordKey" target="_blank">
            <img alt=""
                 src="https://blacksky.community/static/favicon-16x16.png"
                 class="social-icon-inline" />

            Blacksky
        </a>

        <br />

        <a href="https://reddwarf.app/profile/@Model.Post.BlueskyDID/post/@Model.Post.BlueskyRecordKey" target="_blank" style="text-decoration: none">
            <img alt=""
                 src="https://reddwarf.app/redstar.png"
                 class="social-icon-inline" />

            Red Dwarf
        </a>
    </div>
}

@if (Model.Post.DeviantArtUrl != null)
{
    <div class="social-block">
        <a href="@Model.Post.DeviantArtUrl" target="_blank">
            <img alt=""
                 src="https://st.deviantart.net/eclipse/icons/da_favicon_v2.ico"
                 class="social-icon-inline" />
            DeviantArt
        </a>
    </div>
}

@if (Model.Post.FurAffinitySubmissionId is int faSubmissionId)
{
    <div class="social-block">
        <a href="https://www.furaffinity.net/view/@(faSubmissionId)/" target="_blank">
            <img alt=""
                 src="https://sfw.furaffinity.net/themes/beta/img/favicon.ico"
                 class="social-icon-inline" />
            Fur Affinity
        </a>
    </div>
}

@if (Model.Post.FurAffinityJournalId is int faJournalId)
{
    <div class="social-block">
        <a href="https://www.furaffinity.net/journal/@(faJournalId)/" target="_blank">
            <img alt=""
                 src="https://sfw.furaffinity.net/themes/beta/img/favicon.ico"
                 class="social-icon-inline" />
            Fur Affinity
        </a>
    </div>
}

@if (Model.Post.WeasylSubmitId is int submitid)
{
    <div class="social-block">
        <a href="https://www.weasyl.com/~x/submissions/@(submitid)" target="_blank">
            <img alt=""
                 src="https://www.weasyl.com/img/favicon-oP29Tyisif.svg"
                 class="social-icon-inline" />
            Weasyl
        </a>
    </div>
}

@if (Model.Post.WeasylJournalId is int journalid)
{
    <div class="social-block">
        <a href="https://www.weasyl.com/journal/@(journalid)" target="_blank">
            <img alt=""
                 src="https://www.weasyl.com/img/favicon-oP29Tyisif.svg"
                 class="social-icon-inline" />
            Weasyl
        </a>
    </div>
}

@foreach (var image in Model.Post.Images)
{
    <p align="center">
        <picture>
            <source srcset="/Blobs/UserPosts/@Model.Post.Id/@image.Primary.Id" type="@image.Primary.ContentType" />
            <img src="/Blobs/UserPosts/@Model.Post.Id/@image.Raster.Id"
                    alt="@image.AltText"
                    title="@image.AltText"
                    style="width: 100%; max-width: 640px; max-height: 480px; object-fit: contain" />
        </picture>
    </p>

    <p align="center">
        @foreach (var rendition in image.Renditions)
        {
            <a href="/Blobs/UserPosts/@Model.Post.Id/@rendition.Id" target="_blank" class="btn btn-outline-primary btn-sm">
                View (@rendition.ContentType)
            </a>
        }
    </p>
}

@Html.Raw(Model.Post.Html)

@foreach (var link in Model.Post.Links ?? [])
{
    <div class="container-fluid">
        <div class="row">
            @if (link.Image != null)
            {
                <div class="col-lg-4">
                    <p>
                        <img src="@(link.Image ?? "/images/trgray.svg")" style="width: 100%; max-height: 250px; object-fit: contain" alt="" />
                    </p>
                </div>
            }

            <div class="col-lg-8">
                <p>
                    <strong>@link.Title</strong>
                    <br />
                    <span class="small text-muted">
                        @link.SiteName
                    </span>
                </p>

                <p>
                    @link.Description
                </p>

                <p>
                    <a href="@link.Url" target="_blank">
                        View on @link.SiteName
                    </a>
                </p>
            </div>
        </div>
    </div>
}

@if (Model.Post.Tags.Any())
{
    <p>
        @foreach (string tag in Model.Post.Tags)
        {
            <a href="/Profile/Search?q=%23@(Uri.EscapeDataString(tag))">#@tag</a>
        }
    </p>
}

@if (User.Identity?.IsAuthenticated == true)
{
    <details>
        <summary class="mb-3">Actions</summary>

        @if (Model.Post.DeviantArtId == null)
        {
            <form asp-action="Crosspost" asp-controller="DeviantArt" class="mb-3">
                <input type="hidden" name="id" value="@Model.Post.Id" />
                <button type="submit" class="btn btn-success">
                    Post to DeviantArt
                </button>
            </form>
        }
        else
        {
            <form asp-action="Detach" asp-controller="DeviantArt" class="mb-3" onsubmit="This will remove the 'View on DeviantArt' button; it will not delete the post from DeviantArt.">
                <input type="hidden" name="id" value="@Model.Post.Id" />
                <button type="submit" class="btn btn-warning">
                    Detach DeviantArt post
                </button>
            </form>
        }

        @if (Model.Post.FurAffinitySubmissionId == null && Model.Post.FurAffinityJournalId == null)
        {
            <form asp-action="Crosspost" asp-controller="FurAffinity" class="mb-3">
                <input type="hidden" name="id" value="@Model.Post.Id" />
                <button type="submit" class="btn btn-success">
                    Post to Fur Affinity
                </button>
            </form>
        }
        else
        {
            <form asp-action="Detach" asp-controller="FurAffinity" class="mb-3" onsubmit="This will remove the 'View on Fur Affinity' button; it will not delete the post from Fur Affinity.">
                <input type="hidden" name="id" value="@Model.Post.Id" />
                <button type="submit" class="btn btn-warning">
                    Detach Fur Affinity post
                </button>
            </form>
        }

        @if (Model.Post.WeasylSubmitId == null && Model.Post.WeasylJournalId == null)
        {
            <form asp-action="Crosspost" asp-controller="Weasyl" class="mb-3">
                <input type="hidden" name="id" value="@Model.Post.Id" />
                <button type="submit" class="btn btn-success">
                    Post to Weasyl
                </button>
            </form>
        }
        else
        {
            <form asp-action="Detach" asp-controller="Weasyl" class="mb-3" onsubmit="This will remove the 'View on Weasyl' button; it will not delete the post from Weasyl.">
                <input type="hidden" name="id" value="@Model.Post.Id" />
                <button type="submit" class="btn btn-warning">
                    Detach Weasyl post
                </button>
            </form>
        }

        <p class="small text-muted mb-3">
            See the About page for more information about how crossposts work.
        </p>

        <form asp-action="Delete" onsubmit="return confirm('Are you sure you want to delete this post from Pandacap? (This will not delete it from any site it has been crossposted to.)')">
            <input type="hidden" name="id" value="@Model.Post.Id" />
            <button type="submit" class="btn btn-danger">
                Delete from @UserAgentInformation.ApplicationName
            </button>
        </form>
    </details>
}

@if (Model.Replies.Any())
{
    <h2>Comments</h2>

    foreach (var reply in Model.Replies)
    {
        <partial name="_Reply" model="@reply" />
    }
}
