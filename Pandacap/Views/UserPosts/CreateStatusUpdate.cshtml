@using Pandacap.LowLevel
@model CreateStatusUpdateViewModel

@{
    ViewBag.Title = "Post Status Update";
}

<div class="container-fluid">
    <div class="row">
        <div class="col col-lg-8">
            <form asp-action="CreateStatusUpdate" enctype="multipart/form-data">
                <input asp-for="@Model.PhotoBinImageId" type="hidden" />
                <div class="mb-3">
                    <label asp-for="@Model.AltText" class="form-label"></label>
                    <input asp-for="@Model.AltText" class="form-control" />
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.MarkdownBody" class="form-label"></label>
                    <textarea asp-for="@Model.MarkdownBody" class="form-control" rows="5"></textarea>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Tags" class="form-label"></label>
                    <input asp-for="@Model.Tags" class="form-control" />
                </div>
                <button type="submit" class="btn btn-primary">Create new post</button>
            </form>
        </div>
        <div class="col col-lg-4">
            @if (Model.PhotoBinImageId != null)
            {
                <img src="/Blobs/PhotoBin/@Model.PhotoBinImageId"
                     style="width: 100%; max-width: 640px; max-height: 640px; object-fit: contain" />
            }
        </div>
    </div>
</div>
