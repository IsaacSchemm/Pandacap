@using Pandacap.Clients
@model CreateStatusUpdateFromUploadViewModel

@{
    ViewBag.Title = "Post Status Update";
}

<div class="container-fluid">
    <div class="row">
        <div class="col col-12 col-lg-8">
            <h1>Metadata</h1>
            <form asp-action="CreateStatusUpdateFromUpload" enctype="multipart/form-data">
                <input asp-for="@Model.UploadId" type="hidden" />
                <div class="mb-3">
                    <label asp-for="@Model.MarkdownBody" class="form-label"></label>
                    <textarea asp-for="@Model.MarkdownBody" class="form-control" rows="5"></textarea>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.AltText" class="form-label"></label>
                    <textarea asp-for="@Model.AltText" class="form-control" rows="2"></textarea>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Tags" class="form-label"></label>
                    <input asp-for="@Model.Tags" class="form-control" />
                </div>
                <button type="submit" class="btn btn-primary">Create new post</button>
            </form>
        </div>
        <div class="col col-12 col-lg-4">
            <h1>Primary</h1>
            <img src="/Blobs/Uploads/@Model.UploadId"
                 style="width: 100%; max-width: 640px; max-height: 640px; object-fit: contain"
                 title="Primary" />

            <h1>Raster</h1>
            <img src="/Blobs/Uploads/@Model.UploadId/Raster"
                 style="width: 100%; max-width: 640px; max-height: 640px; object-fit: contain"
                 title="Raster" />
        </div>
    </div>
</div>
