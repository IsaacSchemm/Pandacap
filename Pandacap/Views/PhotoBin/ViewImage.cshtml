@using Pandacap.Data
@model PhotoBinImage

@{
    ViewBag.Title = "Photo Bin";
}

<p>
    @Model.UploadedAt.UtcDateTime.ToLongDateString()
    @Model.UploadedAt.UtcDateTime.ToShortTimeString()
</p>

<p>
    <img src="/Blobs/PhotoBin/@Model.Id"
         alt="@Model.AltText"
         title="@Model.AltText"
         style="width: 100%; max-width: 640px; max-height: 640px; object-fit: contain" />
</p>

<p>
    <a asp-controller="UserPosts" asp-action="CreateArtwork" asp-route-photoBinImageId="@Model.Id" class="btn btn-outline-primary">
        Post as artwork
    </a>

    <a asp-controller="UserPosts" asp-action="CreateStatusUpdate" asp-route-photoBinImageId="@Model.Id" class="btn btn-outline-primary">
        Post as status update
    </a>
</p>

<form asp-action="Delete" onsubmit="return confirm('Are you sure you want to delete this image?')">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">
        Delete
    </button>
</form>
