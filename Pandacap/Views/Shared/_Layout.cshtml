@using Pandacap.LowLevel
@inject ApplicationInformation appInfo

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @appInfo.Username</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Pandacap.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Profile" asp-action="Index">@appInfo.Username</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Gallery" asp-action="Artwork">Gallery</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Gallery" asp-action="TextPosts">Posts</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Favorites" asp-action="Index">Favorites</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Inbox
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Inbox" asp-action="ImagePosts">Artwork</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Inbox" asp-action="TextPosts">Blog posts and status updates</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Inbox" asp-action="Shares">Shares</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Inbox" asp-action="MentionsAndReplies">Mentions &amp; Replies</a></li>
                            </ul>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <hr />

    <footer class="text-muted mb-3">
        <div class="container">
            <details>
                <summary>
                    Powered by <a href="@appInfo.WebsiteUrl" target="_blank">@appInfo.ApplicationName</a> - &copy; 2024 contributors (AGPL v3)
                </summary>

                <p>
                    This program is free software: you can redistribute it and/or modify it under the terms of the
                    <a href="https://www.gnu.org/licenses/agpl-3.0.txt" target="_blank">GNU Affero General Public License</a>
                    as published by the Free Software Foundation,
                    either version 3 of the License, or (at your option) any later version.
                </p>

                <p>
                    This program is distributed in the hope that it will be useful, but WITHOUT ANY WARRANTY;
                    without even the implied warranty of MERCHANTABILITY or FITNESS FOR A PARTICULAR PURPOSE.
                    See the GNU Affero General Public License for more details.
                </p>
            </details>
        </div>
    </footer>
    <script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
